{% extends "profile/banner.njk" %}

{% block extrahead %}
<title>{{ displayname or username }}'s Videos | Sanctum</title>
<link rel="canonical" href="https://sanctum.{{ DOMAIN }}/profile/{{ username }}/videos">
{% endblock %}

{% block content %}

  {% if username == session.username %}
    <div class="section">
      <div id="add-video-wrapper">
        {% if not session.type %}
          <a id="add-video-button" href="/verify">
        {% elif session.type < 2 %}
          <a id="add-video-button" href="/identify">
        {% else %}
          <a id="add-video-button" href="/upload">
        {% endif %}
        <svg id="add-video-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path d="M0 128C0 92.7 28.7 64 64 64l256 0c35.3 0 64 28.7 64 64l0 256c0 35.3-28.7 64-64 64L64 448c-35.3 0-64-28.7-64-64L0 128zM559.1 99.8c10.4 5.6 16.9 16.4 16.9 28.2l0 256c0 11.8-6.5 22.6-16.9 28.2s-23 5-32.9-1.6l-96-64L416 337.1l0-17.1 0-128 0-17.1 14.2-9.5 96-64c9.8-6.5 22.4-7.2 32.9-1.6z"/></svg>
          <br>
          Upload Now!
        </a>
      </div>
    </div>
  {% endif %}

  <div class="section">
    <div id="description-block">
      <div id="about-wrapper">
        <span id="about">{{ displayname or username }}'s Videos</span>
        <span id="total-video-count" class="no-display">{{ count }}</span>
        <span id="description"></span>
      </div>
      <div id="filter-wrapper" class="dropdown" onclick="toggleDropdown(this)">
        <button id="filter-button" class="dropdown-button">
          <span id="filter-text">Newest</span>
          <svg id="top-profile-caret" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path d="M137.4 374.6c12.5 12.5 32.8 12.5 45.3 0l128-128c9.2-9.2 11.9-22.9 6.9-34.9s-16.6-19.8-29.6-19.8L32 192c-12.9 0-24.6 7.8-29.6 19.8s-2.2 25.7 6.9 34.9l128 128z"/></svg>
        </button>
        <div id="filter-dropdown-content" class="dropdown-content">
          <a class="dropdown-link dropdown-content-button top" href="/profile/{{ username }}/videos">
            Newest
          </a>
          <a class="dropdown-link dropdown-content-button" href="/profile/{{ username }}/videos?f=mp">
            Most Popular
          </a>
          <a class="dropdown-link dropdown-content-button bot" href="/profile/{{ username }}/videos?f=hr">
            Highest Rated
          </a>
        </div>
      </div>
    </div>
    <ul class="gallery-wrapper">
      {% for video in videos %}
        <li class="video-container">
          <div class="video-thumbnail">
            {% if not video.embed %}
            <div class="preview-progress-bar"></div>
            {% endif %}
            <a class="video-thumbnail-link" href="/watch?v={{ video.videouid }}" title="{{ video.title }}">
              {% if video.embed %}
                <img loading="lazy" src="{{ video.originaltitle }}" alt="Video Thumbnail" width="320" height="180" onerror="this.onerror=null;this.src='/images/Processing.png';this.dataset.preview='/images/Processing.png';this.dataset.img='/images/Processing.png';">
              {% else %}
                <img loading="lazy" class="video-preview" src="https://{{ STREAM_HOSTNAME }}.b-cdn.net/{{ video.videouid }}/thumbnail_small.webp?{{ video.thumbchanges }}" alt="Video Thumbnail" data-img="https://{{ STREAM_HOSTNAME }}.b-cdn.net/{{ video.videouid }}/thumbnail_small.webp?{{ video.thumbchanges }}" data-preview="https://{{ STREAM_HOSTNAME }}.b-cdn.net/{{ video.videouid }}/preview.webp" width="320" height="180" onerror="this.onerror=null;this.src='/images/Processing.png';this.dataset.preview='/images/Processing.png';this.dataset.img='/images/Processing.png';">
              {% endif %}
              <div class="video-duration-overlay">
                <var>{{ video.duration }}</var>
              </div>
            </a>
          </div>
          <div class="video-thumbnail-info-wrapper clearfix">
            <span class="video-title">
              <a href="/watch?v={{ video.videouid }}" title="{{ video.title }}">{{ video.title }}</a>
            </span>
            <div class="video-details-wrapper">
              {% if video.verified %}
                <span class="video-views">
                  <var>{{ video.views }}</var>
                </span>
                <div class="video-rating-wrapper">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path d="M313.4 32.9c26 5.2 42.9 30.5 37.7 56.5l-2.3 11.4c-5.3 26.7-15.1 52.1-28.8 75.2l144 0c26.5 0 48 21.5 48 48c0 18.5-10.5 34.6-25.9 42.6C497 275.4 504 288.9 504 304c0 23.4-16.8 42.9-38.9 47.1c4.4 7.3 6.9 15.8 6.9 24.9c0 21.3-13.9 39.4-33.1 45.6c.7 3.3 1.1 6.8 1.1 10.4c0 26.5-21.5 48-48 48l-97.5 0c-19 0-37.5-5.6-53.3-16.1l-38.5-25.7C176 420.4 160 390.4 160 358.3l0-38.3 0-48 0-24.9c0-29.2 13.3-56.7 36-75l7.4-5.9c26.5-21.2 44.6-51 51.2-84.2l2.3-11.4c5.2-26 30.5-42.9 56.5-37.7zM32 192l64 0c17.7 0 32 14.3 32 32l0 224c0 17.7-14.3 32-32 32l-64 0c-17.7 0-32-14.3-32-32L0 224c0-17.7 14.3-32 32-32z"/></svg>
                  <var class="video-rating">{{ video.dislikes }}</var>
                  <var class="no-display">{{ video.likes }}</var>
                </div>
              {% else %}
                <div class="under-review">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zm0-384c13.3 0 24 10.7 24 24l0 112c0 13.3-10.7 24-24 24s-24-10.7-24-24l0-112c0-13.3 10.7-24 24-24zM224 352a32 32 0 1 1 64 0 32 32 0 1 1 -64 0z"/></svg>
                  <span>UNDER REVIEW</span>
                </div>
              {% endif %}
              {% if username == session.username %}
                <a class="edit-video-button" href="/edit/{{ video.videouid }}" class="">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.7 15.7-7.4 21.9-13.5L437.7 172.3 339.7 74.3 172.4 241.7zM96 64C43 64 0 107 0 160L0 416c0 53 43 96 96 96l256 0c53 0 96-43 96-96l0-96c0-17.7-14.3-32-32-32s-32 14.3-32 32l0 96c0 17.7-14.3 32-32 32L96 448c-17.7 0-32-14.3-32-32l0-256c0-17.7 14.3-32 32-32l96 0c17.7 0 32-14.3 32-32s-14.3-32-32-32L96 64z"/></svg>
                  <span>Edit</span>
                </a>
              {% endif %}
            </div>
          </div>
        </li>
      {% endfor %}
    </ul>
    <div id="page-wrapper"></div>
  </div>

{% endblock %}