    <iframe id="player" title="Watch {{ video.title }}" src="https://iframe.mediadelivery.net/embed/{{ bunnyInfo.libraryid }}/{{ videouid }}?autoplay=true" style="position: absolute;left: 0;top: 0;width: 100%;height: 100%; border: none;" width="1280" height="720" allow="accelerometer; gyroscope; autoplay; encrypted-media; picture-in-picture;" allowfullscreen="true"></iframe>
    <script type="text/javascript" src="https://assets.mediadelivery.net/playerjs/player-0.1.0.min.js"></script>
    <script>
      (() => {
        const videoUrl = document.getElementById('video-url');
        const player = new playerjs.Player('player');
        let paused = true;
        videoUrl.addEventListener('click', (e) => {
          if (paused) {
            e.preventDefault();
          }
          player.getPaused(value => {
            if (value) {
              player.play();
              paused = false;
            } else {
              player.pause();
              paused = true;
            }
          })
        });
      })();
    </script>
  </body>
